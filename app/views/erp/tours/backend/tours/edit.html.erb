<% content_for :title do %>
    <%= @tour.tour_name %>
<% end %>

<% content_for :page_title do %>    
    <a href="<%= erp_tours.backend_tours_path %>">
    <i class="fa fa-map-signs"></i> <%= t('.tours') %>
    </a> / <%= @tour.tour_name %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_tours.new_backend_tour_path,
        class: 'btn-noborder'
    }) %>
<% end %>

<div class="row">
    <div class="col-md-12">
        <% if @tour.errors.any? %>
            <%= erp_form_control("form_error_message") %>
        <% end %>
        
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <%= render 'form', tour: @tour %>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>